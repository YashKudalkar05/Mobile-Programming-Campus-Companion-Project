<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Button pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimaryVariant"/> <!-- Darker color when pressed -->
            <corners android:radius="8dp"/> <!-- Rounded corners -->
        </shape>
    </item>
    <!-- Button focused state -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimary"/> <!-- Primary color for focus -->
            <corners android:radius="8dp"/> <!-- Rounded corners -->
        </shape>
    </item>
    <!-- Default button state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimary"/> <!-- Primary color -->
            <corners android:radius="8dp"/> <!-- Rounded corners -->
            <stroke android:width="1dp" android:color="@color/colorPrimaryVariant"/> <!-- Border color -->
        </shape>
    </item>
</selector>
