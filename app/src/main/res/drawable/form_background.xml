<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow effect -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Transparent background for shadow -->
            <corners android:radius="8dp"/> <!-- Rounded corners for shadow -->
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp"/>
        </shape>
    </item>

    <!-- Main form background -->
    <item android:bottom="1dp" android:right="1dp" android:left="1dp" android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorSurface"/> <!-- Background color for the form -->
            <corners android:radius="8dp"/> <!-- Rounded corners -->
            <stroke
                android:width="1dp"
                android:color="@color/colorDivider"/> <!-- Border color -->
        </shape>
    </item>
</layer-list>

